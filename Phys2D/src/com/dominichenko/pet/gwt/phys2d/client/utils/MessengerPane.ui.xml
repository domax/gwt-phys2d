<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.dialogVPanel {
			margin: 5px;
		}
		
		.htmlContent {
			margin-bottom: 10px;
		}
	</ui:style>
	
	<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" ui:field="dialogVPanel" styleName="{style.dialogVPanel}">
		<g:Cell height="100%" width="100%">
			<g:HTML wordWrap="true" height="100%" width="100%" ui:field="content" styleName="{style.htmlContent}"/>
		</g:Cell>
		<g:Cell horizontalAlignment="ALIGN_CENTER">
			<g:Button ui:field="closeButton" >Close</g:Button>
		</g:Cell>
	</g:VerticalPanel>
	
</ui:UiBinder> 